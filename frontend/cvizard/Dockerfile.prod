FROM node:16 as build-stage
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Stage 2: Serve the app using Nginx
FROM nginx as production-stage
RUN mkdir /app
COPY --from=build-stage /app/dist /app
COPY cvizard.com.crt /etc/nginx/nginx/cvizard.com.crt
COPY cvizard.com.key /etc/nginx/nginx/cvizard.com.key
COPY nginx.conf /etc/nginx/nginx.conf